@{
    ViewData["Title"] = "Symmetric Encryption";
}

<div class="container" dir="rtl">
    <h1 class="mb-4">تشفير وفك تشفير النصوص</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">تشفير النصوص</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Encrypt" method="post">
                        <div class="mb-3">
                            <label for="plainText" class="form-label">النص المراد تشفيره</label>
                            <textarea id="plainText" name="plainText" class="form-control" rows="5" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="seed" class="form-label">seed لإنشاء المفتاح (يجب تذكرها لفك التشفير)</label>
                            <input type="number" id="seed" name="seed" class="form-control" required
                                   value="@(new Random().Next(10000, 99999))" />
                        </div>
                        <button type="submit" class="btn btn-primary">تشفير</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">فك تشفير النصوص</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Decrypt" method="post">
                        <div class="mb-3">
                            <label for="cipherText" class="form-label">النص المشفر</label>
                            <textarea id="cipherText" name="cipherText" class="form-control" rows="5" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="decryptSeed" class="form-label"> ال (seed) المستخدمة في التشفير</label>
                            <input type="number" id="decryptSeed" name="seed" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-success">فك التشفير</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title mb-0">معلومات حول الخوارزمية</h3>
                </div>
                <div class="card-body">
                    <ul>
                        <li>تم استخدام خوارزمية تشفير متماثلة (Symmetric Encryption)</li>
                        <li>طريقة التشفير: CBC (Cipher Block Chaining)</li>
                        <li>مولد المفتاح: Linear Congruential Generator (LCG)</li>
                        <li>حجم المفتاح: 16 بايت (128 بت)</li>
                        <li>يتم اشتقاق متجه التهيئة IV من Seed</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>